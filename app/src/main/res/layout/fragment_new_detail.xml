<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/vNewDetailHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/vNewDetailHeaderBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_margin="20dp" />

            <TextView
                android:id="@+id/vNewDetailHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:fontFamily="sans-serif"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/vNewDetailImage"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/vNewDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:fontFamily="sans-serif"
                    android:text="Ali Connors"
                    android:textColor="@color/woloxBlue"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vNewDetailImage" />

                <TextView
                    android:id="@+id/vNewDetailTimeAgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="30dp"
                    android:fontFamily="sans-serif"
                    android:text="15m"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vNewDetailImage" />

                <TextView
                    android:id="@+id/vNewDetailBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif"
                    android:text="Placeholder text"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vNewDetailTitle" />

                <ToggleButton
                    android:id="@+id/vNewDetailLike"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="40dp"
                    android:background="@null"
                    android:button="@drawable/ic_like_large_selector"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vNewDetailBody" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
